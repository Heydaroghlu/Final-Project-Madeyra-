@model List<Product>

    @foreach (var item in Model)
    {
        <div class="row" style="height:2rem;width:100%">
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2">
                <a asp-action="detail" asp-controller="product" asp-route-id="@item.Id">
                    <img style="width:50px" src="~/uploads/product/@item.ProductImages.FirstOrDefault(x=>x.IsPoster==true)?.Image" alt="">

                </a>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-7">
                <p><a asp-action="detail" asp-controller="product" asp-route-id="@item.Id">@item.Name</a></p>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-">
                <span>@item.SalePrice₼</span>
            </div>
        </div>
    }