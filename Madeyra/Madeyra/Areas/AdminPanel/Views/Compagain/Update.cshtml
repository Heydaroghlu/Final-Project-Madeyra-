
@{
    ViewData["Title"] = "Update";
}
@model Campagain


<div class="container">
    <h1>Kampaniya</h1>
    <form method="post" enctype="multipart/form-data" asp-action="update">

        <div class="row">
            <div class="mb-3 col-xl-6">
                <label asp-for="Title" class="form-label">Titul</label>
                <input asp-for="Title" class="form-control " id="update-input1">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="mb-3 col-xl-6">
                <label asp-for="EndTime" class="form-label">Son Tarix</label>
                <input asp-for="EndTime" class="form-control " id="update-input1">
                <span asp-validation-for="EndTime"></span>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-xl-12">
                <label asp-for="FormFile" class="form-label">Şəkil</label>
                <input asp-for="FormFile" class="form-control " id="update-input1">
                <span asp-validation-for="FormFile"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Təsdiqlə</button>
    </form>
</div>
